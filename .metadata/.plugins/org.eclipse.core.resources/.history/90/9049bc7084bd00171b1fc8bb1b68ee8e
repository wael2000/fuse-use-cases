<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:jee="http://www.springframework.org/schema/jee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans                            http://www.springframework.org/schema/beans/spring-beans.xsd                            http://www.springframework.org/schema/jee                            http://www.springframework.org/schema/jee/spring-jee.xsd                            http://camel.apache.org/schema/spring                            http://camel.apache.org/schema/spring/camel-spring.xsd">
    <jee:jndi-lookup id="mailSession" jndi-name="java:jboss/mail/greenmail"/>
    <camelContext id="usecase02-spring-context" xmlns="http://camel.apache.org/schema/spring">
        <route id="_send_mail_route">
            <from id="_from1" uri="timer://sendEmail?repeatCount=1&amp;period=2000"/>
            <setHeader headerName="from" id="_setHeader1">
                <constant>user1</constant>
            </setHeader>
            <setHeader headerName="to" id="_setHeader2">
                <constant>user2</constant>
            </setHeader>
            <setHeader headerName="subject" id="_setHeader3">
                <constant>Hello</constant>
            </setHeader>
            <setHeader headerName="contentType" id="_setHeader4">
                <constant>text/plain;charset=UTF-8</constant>
            </setHeader>
            <setBody id="_setBody1">
                <constant>Dear DTP, below my details ID:234 Name: Wael Ibrahim </constant>
            </setBody>
            <to id="_to1" uri="smtp://localhost:25?session=#mailSession"/>
        </route>
        <route id="_poll_mail_route">
            <from id="_from2" uri="pop3://user2@localhost:110?session=#mailSession&amp;delay=5000"/>
            <log id="_log1" logName="_poll_mail_route"
                loggingLevel="INFO" message="Email Subject ${header.subject}"/>
            <log id="_log2" logName="_poll_mail_route"
                loggingLevel="INFO" message="Email Body: ${body}"/>
            <!-- <to id="_to2" uri="log:emails?showBodyType=false&amp;showHeaders=true&amp;multiline=true"/>  -->
        </route>
    </camelContext>
</beans>
