      </Layout>
    </Appender>
  </Appenders>
 
  <Loggers>
    <Logger name="camelSpringTest" level="debug" additivity="false">
      <Filter type="ThreadContextMapFilter">
        <KeyValuePair key="test" value="123"/>
      </Filter>
      <AppenderRef ref="STDOUT"/>
    </Logger> 
  </Loggers>
 
